<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonPlusStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPlus</item>
    </style>
    <style name="buttonMinusStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorMinus</item>
    </style>
</resources>